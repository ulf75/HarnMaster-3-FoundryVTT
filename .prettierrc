{
    "bracketSpacing": false,
    "printWidth": 120,
    "quoteProps": "preserve",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": false,

    "overrides": [
        {
            "files": "*.hbs",
            "options": {
                "arrowParens": "always",
                "bracketSameLine": true,
                "bracketSpacing": false,
                "endOfLine": "lf",
                "parser": "angular",
                "printWidth": 140,
                "semi": false,
                "singleQuote": false,
                "trailingComma": "all",
                "useTabs": false
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
