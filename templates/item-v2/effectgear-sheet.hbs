{{#> item_v2_layout_partial  }}

{{> item_v2_standard_partial}}
{{#if isGM}}
<div class="resource artifact flexrow">
    <input
        type="checkbox"
        id="system.hidden"
        name="system.hidden"
        value="{{ iproxy.hidden }}"
        data-dtype="Boolean"
        {{checked
        iproxy.hidden}} />
    <label
        for="system.hidden"
        class="resource-label">
        Hidden
    </label>
    If checked, the effect is not displayed to the players.
</div>
<div class="resource artifact flexrow">
    <input
        type="checkbox"
        id="system.selfDestroy"
        name="system.selfDestroy"
        value="{{ iproxy.selfDestroy }}"
        data-dtype="Boolean"
        {{checked
        iproxy.selfDestroy}} />
    <label
        for="system.selfDestroy"
        class="resource-label">
        Self Destroy
    </label>
    If checked, the item & effect will be deleted after completion.
</div>
{{/if}}

{{/item_v2_layout_partial}}
