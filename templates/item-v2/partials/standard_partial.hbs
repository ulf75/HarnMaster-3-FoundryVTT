<div class="resource-block">
    {{#if (or idata.source (and hasRwPermission editable))}}
    <div class="grid grid-fixed-row grid-1col">
        <div class="resource">
            <label
                for="system.source"
                class="resource-label">
                Source
            </label>
            <input class="value" type="text" id="system.source" name="system.source" value="{{ idata.source }}" data-dtype="String"
            {{#unless (and hasRwPermission editable)}}disabled{{/unless}} />
        </div>
    </div>
    {{/if}}
    {{#if (or idata.notes editable)}}
    <div class="grid grid-fixed-row grid-1col">
        <div class="resource">
            <label
                for="system.notes"
                class="resource-label">
                Note
            </label>
            <input class="value" type="text" id="system.notes" name="system.notes" value="{{ idata.notes }}" data-dtype="String"
            {{#unless editable}}disabled{{/unless}} />
        </div>
    </div>
    {{/if}}
</div>
