<fieldset id="armorlocation-probweight">
    <legend>Hit Probability Weights</legend>
    <div class="grid grid-fixed-row grid-3col">
        <div
            class="resource"
            id="armorlocation-probweight-high">
            <label
                for="system.probWeight.high"
                class="resource-label">
                High Aim
            </label>
            <input class="value" type="number" id="system.probWeight.high" name="system.probWeight.high" value="{{ iproxy.probWeightHigh }}"
            data-dtype="Number" {{#unless (and hasRwPermission editable)}}disabled{{/unless}}/>
        </div>
        <div
            class="resource"
            id="armorlocation-probweight-mid">
            <label
                for="system.probWeight.mid"
                class="resource-label">
                Medium Aim
            </label>
            <input class="value" type="number" id="system.probWeight.mid" name="system.probWeight.mid" value="{{ iproxy.probWeightMid }}"
            data-dtype="Number" {{#unless (and hasRwPermission editable)}}disabled{{/unless}}/>
        </div>
        <div class="resource">
            <label
                for="system.probWeight.low"
                class="resource-label">
                Low Aim
            </label>
            <input class="value" type="number" id="system.probWeight.low" name="system.probWeight.low" value="{{ iproxy.probWeightLow }}"
            data-dtype="Number" {{#unless (and hasRwPermission editable)}}disabled{{/unless}}/>
        </div>
    </div>
</fieldset>
<fieldset>
    <legend>Hit Location Settings</legend>
    <div class="flexrow">
        <div class="flexcol">
            <div class="resource flexrow">
                {{#if (and hasRwPermission editable)}}
                <input
                    class="value"
                    type="checkbox"
                    id="system.isFumble"
                    name="system.isFumble"
                    value="{{ iproxy.isFumble }}"
                    data-dtype="Boolean"
                    {{checked
                    iproxy.isFumble}} />
                {{else}}
                <input
                    class="value"
                    type="checkbox"
                    id="system.isFumble"
                    name="system.isFumble"
                    value="{{ iproxy.isFumble }}"
                    data-dtype="Boolean"
                    {{checked
                    iproxy.isFumble}}
                    disabled />
                {{/if}}
                <label
                    for="system.isFumble"
                    class="resource-label">
                    Fumble Risk
                </label>
            </div>
            <div class="resource flexrow">
                {{#if (and hasRwPermission editable)}}
                <input
                    class="value"
                    type="checkbox"
                    id="system.isStumble"
                    name="system.isStumble"
                    value="{{ iproxy.isStumble }}"
                    data-dtype="Boolean"
                    {{checked
                    iproxy.isStumble}} />
                {{else}}
                <input
                    class="value"
                    type="checkbox"
                    id="system.isStumble"
                    name="system.isStumble"
                    value="{{ iproxy.isStumble }}"
                    data-dtype="Boolean"
                    {{checked
                    iproxy.isStumble}}
                    disabled />
                {{/if}}
                <label
                    for="system.isStumble"
                    class="resource-label">
                    Stumble Risk
                </label>
            </div>
            <div class="resource flexrow">
                {{#if (and hasRwPermission editable)}}
                <input
                    class="value"
                    type="checkbox"
                    id="system.isAmputate"
                    name="system.isAmputate"
                    value="{{ iproxy.isAmputate }}"
                    data-dtype="Boolean"
                    {{checked
                    iproxy.isAmputate}} />
                {{else}}
                <input
                    class="value"
                    type="checkbox"
                    id="system.isAmputate"
                    name="system.isAmputate"
                    value="{{ iproxy.isAmputate }}"
                    data-dtype="Boolean"
                    {{checked
                    iproxy.isAmputate}}
                    disabled />
                {{/if}}
                <label
                    for="system.isAmputate"
                    class="resource-label">
                    Amputate Risk
                </label>
            </div>
        </div>
        <div class="resource">
            <label
                for="system.impactType"
                class="resource-label">
                Location Type
            </label>
            {{#if (and hasRwPermission editable)}}
            <select
                class="value"
                id="system.impactType"
                name="system.impactType">
                {{#select iproxy.impactType}}
                {{#each config.injuryLocations as |value key|}}
                <option value="{{ value.impactType }}">{{ key }}</option>
                {{/each}}
                {{/select}}
            </select>
            {{else}}
            <select
                class="value"
                id="system.impactType"
                name="system.impactType"
                disabled>
                {{#select iproxy.impactType}}
                {{#each config.injuryLocations as |value key|}}
                <option value="{{ value.impactType }}">{{ key }}</option>
                {{/each}}
                {{/select}}
            </select>
            {{/if}}
        </div>
    </div>
