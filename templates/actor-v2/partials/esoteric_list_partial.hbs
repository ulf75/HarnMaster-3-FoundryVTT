{{#if skillList}}
<ol class="items-list spells-list">
    <li class="items-header spell flexrow">
        <h3 class="item-name spell-name">
            {{ header }}
            <a class="more-info" data-journal-entry="Sheet - Esoterics Tab">
                <i class="far fa-question-circle"></i>
            </a>
        </h3>
        {{#if (eq type "Spell")}}
        <div class="item-detail spell-convocation">Convoc.</div>
        <div class="item-detail spell-level">Level</div>
        {{/if}}
        {{#if (eq type "Invocation")}}
        <div class="item-detail spell-convocation">Diety</div>
        <div class="item-detail spell-level">Circle</div>
        {{/if}}
        {{#if (eq type "Psionic")}}
        <div class="item-detail spell-level">Fatigue</div>
        <div class="item-detail spell-eml">SB</div>
        <div class="item-detail spell-eml">ML</div>
        {{/if}}
        <div class="item-detail spell-eml">EML</div>
        <div class="item-detail spell-notes">Notes</div>
        <div class="item-controls-wide">
            <a class="item-control item-create active" title="Create {{ header }}" data-type="{{ dataType }}">
                <i class="fas fa-plus"></i>
                Add
            </a>
        </div>
    </li>
    <ol class="item-list spell-list">
        {{#each skillList as | item |}}
        <li class="item spell flexrow" data-item-id="{{ item.id }}" data-item-name="{{ item.name }}">
            <div class="item-name spell-name {{ ../dataType }}-roll flexrow">
                <div class="item-image" style="background-image: url('{{ item.img }}')"></div>
                <h4>{{ item.name }}</h4>
            </div>
            {{#if (eq ../type "Spell")}}
            <div class="item-detail spell-convocation">{{ system.convocation }}</div>
            <div class="item-detail spell-level">{{ system.level }}</div>
            {{/if}}
            {{#if (eq ../type "Invocation")}}
            <div class="item-detail spell-convocation">{{ system.diety }}</div>
            <div class="item-detail spell-level">{{ system.circle }}</div>
            {{/if}}
            {{#if (eq ../type "Psionic")}}
            <div class="item-detail spell-level">{{ system.fatigue }}</div>
            <div class="item-detail spell-eml">{{ system.skillBase.value }}</div>
            <div class="item-detail spell-eml">{{ system.masteryLevel }}</div>
            {{/if}}
            <div class="item-detail spell-eml">{{ system.effectiveMasteryLevel }}</div>
            <div class="item-detail spell-notes">{{ system.notes }}</div>
            <div class="item-controls-wide">
                {{#if item.isSkillImprovement}}
                <a class="item-control item-improve" title="Improve Skill">
                    {{#if system.improveFlag}}
                    <i class="active fas fa-star"></i>
                    {{else}}
                    <i class="far fa-star"></i>
                    {{/if}}
                </a>
                {{/if}}
                <a class="item-control item-dumpdesc" title="Post {{ ../type }} Description to Chat">
                    <i class="active far fa-comment"></i>
                </a>
                <a class="item-control item-edit" title="Edit {{ ../type }}">
                    <i class="active fas fa-edit"></i>
                </a>
                <a class="item-control item-delete" title="Delete {{ ../type }}" data-label="{{../type}}">
                    <i class="active fas fa-trash"></i>
                </a>
            </div>
        </li>
        {{/each}}
    </ol>
</ol>
{{/if}}
