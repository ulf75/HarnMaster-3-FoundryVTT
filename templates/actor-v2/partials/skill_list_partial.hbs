{{#if skills}}
<ol class="items-list skills-list">
    <li class="items-header skill flexrow">
        <h3 class="item-name skill-name">
            {{ skillType }} Skills
            <a
                class="more-info"
                data-journal-entry="Sheet - Skills Tab">
                <i class="far fa-question-circle"></i>
            </a>
        </h3>
        <div class="skill-ele item-detail">SB</div>
        {{#if isCharacterMancer}}
        <div class="skill-ele item-detail">SBx</div>
        <div class="skill-ele item-detail">OP</div>
        {{/if}}
        <div class="skill-ele item-detail">ML</div>
        <div class="skill-ele item-detail">EML</div>
        <div class="skill-notes item-detail">Notes</div>
        <div class="item-controls{{#if ../isSkillImprovement}}-wide{{/if}}">
            <a
                class="item-control item-create active"
                aria-label="Create {{ skillType }} Skill"
                data-tooltip="Create {{ skillType }} Skill"
                data-tooltip-direction="UP"
                data-type="skill"
                data-skilltype="{{ skillType }}">
                <i class="fas fa-plus"></i>
                Add
            </a>
        </div>
    </li>
    <ol class="item-list skill-list">
        {{#each skills as | item |}}
        <li
            class="item skill skill-item flexrow"
            data-item-id="{{ item.id }}"
            data-item-name="{{ item.name }}">
            <div class="item-name skill-roll skill-name flexrow">
                <div
                    class="item-image"
                    style="background-image: url('{{ item.img }}')"></div>
                <h4>{{ item.name }}</h4>
            </div>
            <div class="skill-ele item-detail">{{ system.skillBase.value }}</div>
            {{#if ../isCharacterMancer}}
            <div class="skill-ele item-detail">
                <input
                    type="text"
                    name="item-sbx-special"
                    id="{{ item.id }}-SBx"
                    value="{{ system.skillBase.SBx }}"
                    data-dtype="Number" />
            </div>
            <div class="skill-ele item-detail">
                <input
                    type="text"
                    name="item-op-special"
                    id="{{ item.id }}-OP"
                    value="{{ system.skillBase.OP }}"
                    data-dtype="Number" />
            </div>
            {{/if}}
            <div class="skill-ele item-detail">{{ system.masteryLevel }}</div>
            <div class="skill-ele item-detail">{{ system.effectiveMasteryLevel }}</div>
            <div class="skill-notes">{{ system.notes }}</div>
            <div class="item-controls{{#if ../isSkillImprovement}}-wide{{/if}}">
                {{#if item.isSkillImprovement}}
                <a
                    class="item-control item-improve"
                    aria-label="Improve Skill"
                    data-tooltip="Improve Skill"
                    data-tooltip-direction="UP">
                    {{#if system.improveFlag}}
                    <i class="active fas fa-star"></i>
                    {{else}}
                    <i class="far fa-star"></i>
                    {{/if}}
                </a>
                {{/if}}
                <a
                    class="item-control item-edit"
                    aria-label="Edit Skill"
                    data-tooltip="Edit Skill"
                    data-tooltip-direction="UP">
                    <i class="active fas fa-edit"></i>
                </a>
                <a
                    class="item-control item-delete"
                    aria-label="Delete Skill"
                    data-tooltip="Delete Skill"
                    data-tooltip-direction="UP"
                    data-label="{{ skillType }} Skill">
                    <i class="active fas fa-trash"></i>
                </a>
            </div>
        </li>
        {{/each}}
    </ol>
</ol>
{{/if}}
