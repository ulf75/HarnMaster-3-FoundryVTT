<form
    class="{{ cssClass }} sheet flexcol"
    autocomplete="off">
    {{! Sheet Header }}
    <header class="sheet-header sheet-header-character">
        <div class="flexrow">
            {{> char_v2_img_partial cls='profile-img' src=actor.img edit='img' h=100 w=100}}
            <div class="flexcol header-fields">
                <div class="flexrow name-attribute">
                    <h1 class="charname">
                        <input
                            name="name"
                            type="text"
                            value="{{ actor.name }}"
                            placeholder="Name" />
                    </h1>
                    <div class="header-stat-block">
                        <!-- <div class="penalties flexrow">
                        </div>
                        <div class="endurance flexrow">
                            <span class="label">Shock Index: {{adata.shockIndex.value}}</span>
                        </div>
                        <div class="endbar">
                            <span class="bar" style="width: {{adata.shockIndex.value}}%"></span>
                        </div> -->
                    </div>
                </div>
                <div class="header-attributes">
                    <ol class="flexrow">
                        <li class="attribute species flexcol">
                            <label
                                for="system.species"
                                class="label">
                                Race
                            </label>
                            <input
                                class="value"
                                type="text"
                                id="system.species"
                                name="system.species"
                                value="{{ adata.species }}"
                                data-dtype="String" />
                        </li>
                        <li class="attribute gender flexcol">
                            <label
                                for="system.gender"
                                class="label">
                                Gender
                            </label>
                            <input
                                class="value"
                                type="text"
                                id="system.gender"
                                name="system.gender"
                                value="{{ adata.gender }}"
                                data-dtype="String" />
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </header>

    {{! Sheet Body }}
    <section class="sheet-body">
        <div class="facade">
            <div class="flexrow">
                {{> char_v2_img_partial cls='facade-image' src=adata.bioImage edit='system.bioImage' h=300 w=200}}
                <div class="facade-description">
                    {{editor
                        descriptionHTML
                        target='system.description'
                        button=true
                        engine='prosemirror'
                        owner=owner
                        editable=editable
                    }}
                </div>
            </div>
        </div>
    </section>
</form>
