<form
    class="{{ cssClass }} sheet flexcol"
    autocomplete="off">
    {{! Sheet Header }}
    <header class="sheet-header sheet-header-character">
        <div class="flexrow">
            {{> char_v2_img_partial cls='profile-img' src=actor.img edit='img' h=100 w=100}}
            <div class="flexcol header-fields">
                <div class="flexrow name-attribute">
                    <h1 class="charname">
                        <input
                            name="name"
                            type="text"
                            value="{{ actor.name }}"
                            placeholder="Name" />
                    </h1>
                    <div class="header-stat-block">
                        <div class="penalties flexrow">
                            <div class="capacity-label">Max Capacity</div>
                            <input
                                class="capacity-value"
                                type="number"
                                name="system.capacity.max"
                                value="{{ adata.capacity.max }}"
                                data-dtype="Number" />
                        </div>
                        <div class="endurance flexrow">
                            <span class="label">Capacity: {{ adata.capacity.value }}</span>
                        </div>
                        <div class="endbar">
                            <span
                                class="bar"
                                style="width: {{ adata.capacity.pct }}%"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    {{! Sheet Body }}
    <section class="sheet-body">
        <div class="facade">
            <div class="flexrow">
                {{> char_v2_img_partial cls='facade-image' src=adata.bioImage edit='system.bioImage' h=300 w=200}}
                <div class="facade-description">
                    {{editor
                        descriptionHTML
                        target='system.description'
                        button=true
                        engine='prosemirror'
                        owner=owner
                        editable=editable
                    }}
                </div>
            </div>
        </div>
    </section>
</form>
