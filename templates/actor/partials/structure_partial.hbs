            </div>
            <ol class="macros-list">
                <li class="macros-header flexrow">
                    <h3 class="macro-name flexrow">
                        Macro
                        <a class="more-info" data-journal-entry="Sheet - Macro Tab">
                            <i class="far fa-question-circle"></i>
                        </a>
                    </h3>
                    <div class="macro-source">Type</div>
                    <!-- <div class="macro-duration">Trigger</div> -->
                    <div class="macro-changes">Trigger</div>
                    <a class="macro-controls macro-control" title="Add Macro" data-action="create">
                        <span class="active">
                            <i class="fas fa-plus"></i>
                            Add
                        </span>
                    </a>
                </li>
                <ol class="macro-list item-list">
                    {{#each adata.macrolist as |macro|}}
                    <li
                        class="macro {{#if macro.disabled}}disabled{{/if}} flexrow"
                        data-macro-name="{{ macro.name }}"
                        data-macro-id="{{ macro._id }}">
                        <div class="macro-name flexrow">
                            <div class="macro-image" style="background-image: url('{{ macro.img }}')"></div>
                            <h4>{{ macro.name }}</h4>
                        </div>
                        <div class="macro-ele macro-source">{{ macro.type }}</div>
                        <!-- <div class="macro-ele macro-duration">{{macro.trigger}}</div> -->
                        <div class="macro-ele macro-changes">{{ macro.trigger }}</div>
                        <div class="macro-controls">
                            <!-- <a class="macro-control" data-action="toggle"><i class="{{#unless macro.disabled}}active{{/unless}} fas fa-circle-notch"></i></a> -->
                            <a class="macro-control" data-action="edit">
                                <i class="active fas fa-edit"></i>
                            </a>
                            <a class="macro-control" data-action="delete">
                                <i class="active fas fa-trash"></i>
                            </a>
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </ol>
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            <div class="flexrow">
                <input
                    class="effects-name-filter"
                    type="text"
                    name="system.effectsNameFilter"
                    placeholder="Filter effects by name..."
                    data-dtype="String" />
            </div>
            <ol class="effects-list">
                <li class="effects-header flexrow">
                    <h3 class="effect-name flexrow">
                        Effect
                        <a class="more-info" data-journal-entry="Sheet - Effect Tab">
                            <i class="far fa-question-circle"></i>
                        </a>
                    </h3>
                    <div class="effect-source">Source</div>
                    <div class="effect-source">Start</div>
                    <div class="effect-duration">Remaining</div>
                    <div class="effect-changes">Changes</div>
                    {{#if hasRwPermission}}
                    <a class="effect-controls effect-control" title="Add Effect" data-action="create">
                        <span class="active">
                            <i class="fas fa-plus"></i>
                            Add
                        </span>
                    </a>
                    {{else}}
                    <a class="effect-controls effect-control disable" data-action="void">
                        <span class="inactive">
                            <i class="fas fa-plus"></i>
                            Add
                        </span>
                    </a>
                    {{/if}}
                </li>
                <ol class="effect-list item-list">
                    {{#each effects as |effect id|}}
                    <li
                        class="effect {{#if effect.disabled}}disabled{{/if}} flexrow"
                        data-effect-name="{{ effect.name }}"
                        data-effect-id="{{ effect.id }}">
                        <div class="effect-name flexrow">
                            <div class="effect-image" style="background-image: url('{{ effect.img }}')"></div>
                            <h4>{{ effect.name }}</h4>
                        </div>
                        <div class="effect-ele effect-source">{{ effect.sourceName }}</div>
                        <div class="effect-ele effect-duration">{{ effect.duration.startLabel }}</div>
                        <div class="effect-ele effect-duration">
                            {{#if (eq effect.duration.label "None")}}Indefinite{{else}}{{ effect.duration.label }}{{/if}}
                        </div>
                        <div class="effect-ele effect-changes">{{ effect.changes }}</div>
                        <div class="effect-controls">
                            {{#if ../hasRwPermission}}
                            <a class="effect-control" title="Toggle Effect on|off" data-action="toggle">
                                <i class="{{#unless effect.disabled}}active{{/unless}} fas fa-circle-notch"></i>
                            </a>
                            <a class="effect-control" title="Edit Effect" data-action="edit">
                                <i class="active fas fa-edit"></i>
                            </a>
                            <a class="effect-control" title="Delete Effect" data-action="delete">
                                <i class="active fas fa-trash"></i>
                            </a>
                            {{else}}
                            <a class="effect-control disable" data-action="void">
                                <i class="inactive fas fa-circle-notch"></i>
                            </a>
                            <a class="effect-control disable" data-action="void">
                                <i class="inactive fas fa-edit"></i>
                            </a>
                            <a class="effect-control disable" data-action="void">
                                <i class="inactive fas fa-trash"></i>
                            </a>
                            {{/if}}
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </ol>
        </div>
    </section>
</form>
