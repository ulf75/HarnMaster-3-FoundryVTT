            <ol class="items-list fffs-list">
                <li class="items-header fff flexrow">
                    <h3 class="item-name fff-name">Party</h3>
                    <div class="item-detail fff-gender">Gender</div>
                    <div class="item-detail fff-occupation">Occupation</div>
                    <div class="item-detail fff-notes">Notes</div>
                    <div class="item-controls-wide">
                        <!-- <a class="item-control item-create active" title="Create Spell" data-type="spell"><i
                                class="fas fa-plus"></i> Add</a> -->
                    </div>
                </li>
                <ol class="item-list fff-list">
                    {{#each items as | item |}}
                    {{#if (eq item.type "companion")}}
                    {{#if (eq item.system.type "Party")}}
                    <li class="item fff flexrow" data-item-id="{{ item.id }}" data-item-name="{{ item.name }}">
                        <div class="item-name fff-name fff-roll flexrow">
                            <div
                                id="companion"
                                class="item-image"
                                style="background-image: url('{{ item.img }}')"
                                data-item-actor-uuid="{{ item.system.actorUuid }}"></div>
