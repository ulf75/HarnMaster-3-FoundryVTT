{{#> item_layout_partial  }}

<div class="grid grid-fixed-row grid-2col">
    <div
        class="resource"
        id="injury-healrate">
        <label class="resource-label">Heal Rate (HR)</label>
        <input
            class="value"
            type="number"
            name="system.healRate"
            value="{{ idata.healRate }}"
            data-dtype="Number" />
    </div>
    <div
        class="resource"
        id="injury-level">
        <label class="resource-label">Injury Level (IL)</label>
        <input
            class="value"
            type="number"
            name="system.injuryLevel"
            value="{{ idata.injuryLevel }}"
            data-dtype="Number" />
    </div>
</div>
{{> item_standard_partial}}

{{/item_layout_partial}}
