<form>
    {{#if defaultAspect}}
    <div class="form-group">
        <label for="weaponAspect">Weapon Aspect:</label>
        <select name="weaponAspect">
            {{#select defaultAspect}}
            {{#each aspects as |value key|}}
            <option value="{{ key }}">{{ key }}{{#if (gt value -1)}} ({{ value }}){{/if}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    {{/if}}

    {{#if distance}}
    <div class="form-group">
        <label>Distance:</label>
        {{#if isGridDistanceUnits}}
        <span>{{ distanceGrid }} hex</span>
        {{else}}
        <span>{{ distance }} ft</span>
        {{/if}}
    </div>
    {{/if}}

    {{#if ranges}}
    {{#if rangeExceedsExtreme}}
    <div class="form-group">
        <div>
            WARNING: Distance exceeds the extreme range for this weapon.
            <br />
            Please consult with your GM before continuing this attack.
        </div>
    </div>
    {{/if}}

    <div class="form-group">
        <label for="range">Range (Max Distance):</label>
        <select
            id="range"
            name="range">
            {{selectOptions ranges selected=defaultRange valueAttr='key' labelAttr='label'}}
        </select>
    </div>
    {{/if}}

    <div class="form-group">
        <label for="aim">Aim:</label>
        <select
            id="aim"
            name="aim">
            {{selectOptions aimLocations selected=defaultAim valueAttr='key' labelAttr='label'}}
        </select>
    </div>

    <div class="form-group">
        <label for="addlModifier">Additional {{ type }} Modifier:</label>
        <input
            type="number"
            id="addlModifier"
            name="addlModifier"
            value="{{ defaultModifier }}" />
    </div>

    {{#if unarmed}}
    <div class="form-group">
        <label>Grapple Attack?</label>
        <input
            type="checkbox"
            name="grapple" />
    </div>
    {{/if}}
</form>
